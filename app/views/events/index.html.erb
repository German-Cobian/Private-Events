<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-center py-3">
  <div class="col-5">
    <div class="d-flex flex-row justify-content-center">
      <h1 class="pl-3">Events</h1>
    </div>

    <div class="d-flex flex-column border">
      <% @events.each do |event| %>
        <h6 class="pl-5 pt-3">Title</h6>
        <p class="pl-5"><%= event.title %></p>
        <h6 class="pl-5">Description</h6>
        <p class="pl-5"><%= event.description %></p>
        <div class="d-flex flex-row justify-content-around">
          <div class="f-flex flew-column">
            <h6>Date</h6>
            <p><%= event.date %></p>
          </div>
          <div class="d-flex flex-column">
            <h6>User</h6>
            <p><%= event.user_id %></p>
          </div>
        </div>
        <a><%= link_to 'Show', event, class: "pl-5 pb-3 border-bottom" %></a>
      <% end %>
    </div>
  </div>
</div>
